<div class="container">
    <header class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom">
    <%= link_to image_tag("logo.png", width: "32px", height: "32px"), root_path, class: "d-flex align-items-center mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none" %>

    <ul class="nav nav-pills">
        <li class="nav-item">
          <% if current_user %>
            <li>
              <%= link_to "All Statements", income_expenditure_statements_path, class: "nav-link" %>
            </li>
            <li>
            <%= link_to current_user.email, "#", class: "nav-link" %>
            </li>
            <li>
            <%= button_to "Sign Out", destroy_user_session_path,
                        method: :delete, data: { turbo_method: :delete },
                    class: "button nav-link" %>
            </li>
        <% else %>
            <li>
              <%= link_to "Sign In", new_user_session_path, class: "button nav-link" %>
            </li>
            <li>
              <%= link_to "Sign Up", new_user_registration_path, class: "button nav-link" %>
            </li>
        <% end %>
        </li>
    </ul>
    </header>
</div>    
